@model List<ResultSliderDto>
@{
    ViewData["Title"] = "SliderList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>SliderList</h1>

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Tables</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Slider List</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Slider Operations</a>
                </li>
            </ul>
        </div>
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hoverable Table</div>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Slider Title</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SliderID</td>
                                        <td>@item.SliderTitle</td>
                                        <td><a href="/Sliders/DeleteSlider/@item.SliderID" class="btn btn-danger">Delete</a></td>
                                        <td><a href="/Sliders/UpdateSlider/@item.SliderID" class="btn btn-info">Update</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="text-center">
                            <a href="/Sliders/CreateSlider" class="btn btn-success">Add New Slider</a>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
</div>
